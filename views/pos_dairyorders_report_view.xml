<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_report_pos_dairyorder" model="ir.ui.view">
            <field name="name">report.pos.dairyorder.tree</field>
            <field name="model">report.pos.dairyorder</field>
            <field name="arch" type="xml">
                <tree string="Tree Dairy Sales Analysis" disable_linking="True">
                    <field name="product_categ_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="order_id" />
                    <field name="product_id" />
                    <field name="product_qty"  type="measure"/>
                    <field name="unit_price" />
                    <field name="total_discount"/>
                    <field name="price_sub_total" />

                    <field name="price_total" type="measure"/>
                </tree>
            </field>
        </record>
  

        <record id="action_report_pos_order_all" model="ir.actions.act_window">
            <field name="name">Daily Order Report</field>
            <field name="res_model">report.pos.dairyorder</field>
            <field name="view_type">form,tree</field>
            <field name="search_view_id" ref="view_report_pos_order_search"/>
            <field name="context">{'group_by_no_leaf':1,'group_by':[]}</field>
        </record>


        <menuitem id="menu_report_pos_dairy_order" name="Dairy Sales Report" action="action_report_pos_order_all" parent="menu_point_rep" />


</odoo>